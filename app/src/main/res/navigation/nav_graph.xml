<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/kiemTraFragment">

    <!-- ClassFragment: Quản lý Lớp học -->
    <fragment
        android:id="@+id/classFragment"
        android:name="com.example.javaopencv.ui.ClassFragment"
        android:label="Quản lý Lớp học">
        <argument
            android:name="subjectId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_classFragment_to_classDetailFragment"
            app:destination="@id/classDetailFragment" />
    </fragment>

    <!-- ClassDetailFragment: Chi tiết Lớp học -->
    <fragment
        android:id="@+id/classDetailFragment"
        android:name="com.example.javaopencv.ui.ClassDetailFragment"
        android:label="Chi tiết Lớp học">
        <argument
            android:name="classId"
            app:argType="integer" />

        <!-- Action to ExamDetailFragment with necessary args -->
        <action
            android:id="@+id/action_classDetailFragment_to_examDetailFragment"
            app:destination="@id/examDetailFragment">
            <argument
                android:name="examId"
                app:argType="integer" />
            <argument
                android:name="questionCount"
                app:argType="integer"
                android:defaultValue="20" />
            <argument
                android:name="classId"
                app:argType="integer" />
        </action>
    </fragment>

    <!-- KiemTraFragment: Kiểm Tra -->
    <fragment
        android:id="@+id/kiemTraFragment"
        android:name="com.example.javaopencv.ui.KiemTraFragment"
        android:label="Kiểm Tra" >
        <action
            android:id="@+id/action_kiemTraFragment_to_class"
            app:destination="@id/classFragment" />
        <action
            android:id="@+id/action_kiemTraFragment_to_examDetailFragment"
            app:destination="@id/examDetailFragment" />
        <action
            android:id="@+id/action_kiemTraFragment_to_giayThiFragment"
            app:destination="@id/giayThiFragment" />
    </fragment>

    <!-- ExamDetailFragment: Chi tiết bài thi -->
    <fragment
        android:id="@+id/examDetailFragment"
        android:name="com.example.javaopencv.ui.ExamDetailFragment"
        android:label="Chi tiết bài thi" >
        <argument
            android:name="examId"
            app:argType="integer" />
        <argument
            android:name="questionCount"
            app:argType="integer"
            android:defaultValue="20" />
        <argument
            android:name="classId"
            app:argType="integer"
            android:defaultValue="-1" />

        <!-- Các action có sẵn -->
        <action
            android:id="@+id/action_examDetailFragment_to_dapAnFragment"
            app:destination="@id/dapAnFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_chamBaiFragment"
            app:destination="@id/chamBaiFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_xemLaiFragment"
            app:destination="@id/xemLaiFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_thongKeFragment"
            app:destination="@id/thongKeFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_thongTinFragment"
            app:destination="@id/thongTinFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_studentListFragment"
            app:destination="@id/studentListFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_danhSachToSaiMaDeFragment"
            app:destination="@id/danhSachToSaiMaDeFragment" />
        <action
            android:id="@+id/action_examDetailFragment_to_danhSachToSaiMaSVFragment"
            app:destination="@id/danhSachToSaiMaSVFragment" />
    </fragment>

    <!-- Remaining fragments -->
    <!-- StudentListFragment -->
    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.javaopencv.ui.StudentListFragment"
        android:label="Danh sách điểm học sinh" >
        <argument
            android:name="examId"
            app:argType="integer" />
    </fragment>

    <!-- DapAnFragment -->
    <fragment
        android:id="@+id/dapAnFragment"
        android:name="com.example.javaopencv.ui.DapAnFragment"
        android:label="Đáp án" >
        <action
            android:id="@+id/action_dapAnFragment_to_addMaDeFragment"
            app:destination="@id/addMaDeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addMaDeFragment"
        android:name="com.example.javaopencv.ui.AddMaDeFragment"
        android:label="Tạo mã đề" />

    <!-- DanhSachToSaiMaDeFragment -->
    <fragment
        android:id="@+id/danhSachToSaiMaDeFragment"
        android:name="com.example.javaopencv.ui.DanhSachToSaiMaDeFragment"
        android:label="Danh sách tô sai mã đề">
        <argument
            android:name="examId"
            app:argType="integer" />
    </fragment>

    <!-- DanhSachToSaiMaSVFragment -->
    <fragment
        android:id="@+id/danhSachToSaiMaSVFragment"
        android:name="com.example.javaopencv.ui.DanhSachToSaiMaSVFragment"
        android:label="Danh sách tô sai mã sinh viên">
        <argument
            android:name="examId"
            app:argType="integer" />
        <argument
            android:name="classId"
            app:argType="integer" />
    </fragment>

    <!-- ThongTinFragment -->
    <fragment
        android:id="@+id/thongTinFragment"
        android:name="com.example.javaopencv.ui.ThongTinFragment"
        android:label="Phân tích kết quả điểm thi" />

    <!-- ChamBaiFragment -->
    <fragment
        android:id="@+id/chamBaiFragment"
        android:name="com.example.javaopencv.ui.ChamBaiFragment"
        android:label="Chấm bài" />

    <!-- XemLaiFragment -->
    <fragment
        android:id="@+id/xemLaiFragment"
        android:name="com.example.javaopencv.ui.XemLaiFragment"
        android:label="Kiểm dò bài thi" >
        <action
            android:id="@+id/action_xemLaiFragment_to_gradeDetailFragment"
            app:destination="@+id/gradeDetailFragment" />
    </fragment>

    <!-- GradeDetailFragment -->
    <fragment
        android:id="@+id/gradeDetailFragment"
        android:name="com.example.javaopencv.ui.GradeDetailFragment"
        android:label="Chi tiết bài đã chấm" >
        <argument
            android:name="gradeId"
            app:argType="long" />
        <action
            android:id="@+id/action_gradeDetailFragment_to_editGradeFragment"
            app:destination="@id/editGradeFragment" />
    </fragment>

    <!-- EditGradeFragment -->
    <fragment
        android:id="@+id/editGradeFragment"
        android:name="com.example.javaopencv.ui.EditGradeFragment"
        android:label="Chỉnh sửa kết quả" >
        <argument
            android:name="gradeId"
            app:argType="long" />
    </fragment>

    <!-- ThongKeFragment -->
    <fragment
        android:id="@+id/thongKeFragment"
        android:name="com.example.javaopencv.ui.ThongKeFragment"
        android:label="Thống kê điểm thi" />

    <!-- GiayThiFragment -->
    <fragment
        android:id="@+id/giayThiFragment"
        android:name="com.example.javaopencv.ui.GiayThiFragment"
        android:label="Giấy thi" />
</navigation>
