<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_giay_thi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaf4fa">

    <!-- Nội dung scrollable, cuộn cùng AppBar của Activity -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll_giay_thi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Phần hiển thị Phiếu 20 câu -->
            <LinearLayout
                android:id="@+id/layout_phieu20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_phieu20_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phiếu 20 câu"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="8dp" />

                <ImageView
                    android:id="@+id/img_phieu_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phieu_20"
                    android:contentDescription="Mẫu phiếu 20 câu"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_tai_phieu_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tải phiếu 20"
                    android:layout_gravity="center"
                    android:onClick="onDownloadPhieu20"
                    android:contentDescription="Tải file Excel mẫu phiếu 20 câu" />

                <!-- Nút mới: Tải Excel mẫu -->
                <Button
                    android:id="@+id/btn_tai_excel_mau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Tải Excel mẫu"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:onClick="onDownloadExcelMau"
                    android:contentDescription="Tải file Excel mẫu" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
