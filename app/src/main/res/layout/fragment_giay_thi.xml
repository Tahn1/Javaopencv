<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Phần header của màn hình Giấy thi -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_giay_thi"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Nội dung của màn hình Giấy thi -->
    <TextView
        android:id="@+id/tv_giay_thi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giấy thi của bạn"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_giay_thi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
