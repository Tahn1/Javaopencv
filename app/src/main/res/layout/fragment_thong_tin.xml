<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView chứa toàn bộ thông tin -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tên bài thi -->
            <TextView
                android:text="Tên bài thi:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:layout_marginBottom="8dp"/>

            <!-- Lớp học (ẩn mặc định) -->
            <TextView
                android:id="@+id/tv_exam_class_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp học:"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_exam_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Môn học (ẩn mặc định) -->
            <TextView
                android:id="@+id/tv_exam_subject_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học:"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_exam_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <!-- Phiếu chấm -->
            <TextView
                android:text="Phiếu chấm:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_phieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:layout_marginBottom="8dp"/>

            <!-- Số câu -->
            <TextView
                android:text="Số câu:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_socau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:layout_marginBottom="8dp"/>

            <!-- Số bài chấm -->
            <TextView
                android:text="Số bài chấm:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_sobaicham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginBottom="8dp"/>

            <!-- Số đáp án (số mã đề) -->
            <TextView
                android:text="Số đáp án (mã đề):"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_sodapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginBottom="8dp"/>

            <!-- Điểm trung bình -->
            <TextView
                android:text="Điểm trung bình:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_dtb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginBottom="8dp"/>

            <!-- Điểm thấp nhất -->
            <TextView
                android:text="Điểm thấp nhất:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginBottom="8dp"/>

            <!-- Điểm cao nhất -->
            <TextView
                android:text="Điểm cao nhất:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_exam_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
