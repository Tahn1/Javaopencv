<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewTabDa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF5F8FA">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Cột 1: STT (non-clickable) -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_da_col1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rowCount="20"
            app:columnCount="1"
            app:useDefaultMargins="true"
            app:alignmentMode="alignBounds"
            android:layout_margin="2dp" />

        <!-- Cột A (clickable) -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_da_col2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rowCount="20"
            app:columnCount="1"
            app:useDefaultMargins="true"
            app:alignmentMode="alignBounds"
            android:layout_margin="2dp" />

        <!-- Cột B -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_da_col3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rowCount="20"
            app:columnCount="1"
            app:useDefaultMargins="true"
            app:alignmentMode="alignBounds"
            android:layout_margin="2dp" />

        <!-- Cột C -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_da_col4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rowCount="20"
            app:columnCount="1"
            app:useDefaultMargins="true"
            app:alignmentMode="alignBounds"
            android:layout_margin="2dp" />

        <!-- Cột D -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_da_col5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:rowCount="20"
            app:columnCount="1"
            app:useDefaultMargins="true"
            app:alignmentMode="alignBounds"
            android:layout_margin="2dp" />

    </LinearLayout>
</ScrollView>
