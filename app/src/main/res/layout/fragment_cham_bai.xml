<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_cham_bai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Nút chọn ảnh / folder -->
    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Chọn ảnh/Thư mục" />

    <!-- ProgressBar hiển thị khi đang chấm batch -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>

    <!-- ImageView hiển thị kết quả debug (nếu bạn vẫn muốn dùng) -->
    <ImageView
        android:id="@+id/imageViewDebug"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="Ảnh debug OMR" />

    <!-- RecyclerView hiển thị danh sách kết quả batch -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBatchResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
