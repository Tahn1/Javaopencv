<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme gốc của bạn phải không có ActionBar -->
    <style name="Base.Theme.Javaopencv" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#9C27B0</item>

    </style>

    <!-- Ứng dụng sử dụng theme này -->
    <style name="Theme.Javaopencv" parent="Base.Theme.Javaopencv" />

        <style name="ToolbarTitleSmall" parent="TextAppearance.AppCompat.Title">
            <item name="android:textSize">15sp</item>
            <item name="android:textColor">?attr/colorOnPrimary</item>
        </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Các tuỳ chỉnh màu sắc, phong cách của bạn vẫn như cũ -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- … -->
    </style>

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Tắt window title và action bar gốc -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Còn lại giữ colorPrimary, v.v. như trước -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>


</resources>
