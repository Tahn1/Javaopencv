<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme gốc của bạn phải không có ActionBar -->
    <style name="Base.Theme.Javaopencv" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- màu chủ đạo của app -->
        <item name="colorPrimary">#9C27B0</item>
        <!-- cho phép vẽ background cho status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- đặt màu status bar cho cùng tông với toolbar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- false = icon trắng (dùng trên nền đậm) -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Ứng dụng sử dụng theme này -->
    <style name="Theme.Javaopencv" parent="Base.Theme.Javaopencv" />

        <style name="ToolbarTitleSmall" parent="TextAppearance.AppCompat.Title">
            <item name="android:textSize">15sp</item>
            <item name="android:textColor">?attr/colorOnPrimary</item>
        </style>

    <style name="TextAppearance.Toolbar.Title.Small" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>


    <!-- res/values/styles.xml -->
    <!-- AppTheme gốc của bạn -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- bắt buộc để vẽ được status bar background -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- đặt màu status bar (nên tối tương ứng toolbar) -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <!-- false = icon trắng, true = icon đen -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- giữ nguyên màu primary cho toolbar -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Tắt window title và action bar gốc -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Còn lại giữ colorPrimary, v.v. như trước -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>


</resources>
